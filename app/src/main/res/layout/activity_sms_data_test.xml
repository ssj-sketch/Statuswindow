<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="SMS 데이터 테스트" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMS 데이터 저장 테스트"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 데이터베이스 현황 그리드 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="데이터베이스 현황"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:rowCount="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:background="@android:color/holo_blue_light"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="카드 거래"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/white"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_card_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0건"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:background="@android:color/holo_green_light"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="수입 내역"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/white"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_income_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0건"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:background="@android:color/holo_orange_light"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="은행 잔고"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/white"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_bank_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0건"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:background="@android:color/holo_purple"
                                android:padding="8dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="총 잔고"
                                    android:textSize="12sp"
                                    android:textColor="@android:color/white"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/tv_total_balance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0원"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                            </LinearLayout>

                        </GridLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 수동 SMS 입력 테스트 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="수동 SMS 입력 테스트"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SMS 텍스트를 직접 입력하여 테스트하세요:"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/et_manual_sms"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:hint="예: 신한 10/11 21:54  100-***-159993 입금 급여  2,500,000 잔액  3,265,147 급여"
                            android:inputType="textMultiLine"
                            android:gravity="top|start"
                            android:padding="12dp"
                            android:background="@android:drawable/edit_text"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn_save_manual_sms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="입력한 SMS 저장"
                            android:layout_marginBottom="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="개별 테스트"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn_test_card_transaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="카드 거래 내역 테스트"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn_test_income_transaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="수입 내역 테스트"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn_test_bank_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="은행 잔고 테스트" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="통합 테스트"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn_test_all_sms_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="모든 SMS 데이터 테스트"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn_test_data_retrieval"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="데이터 조회 테스트"
                            android:layout_marginBottom="8dp" />

                        <Button
                            android:id="@+id/btn_clear_all_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="모든 데이터 삭제"
                            android:backgroundTint="@android:color/holo_red_light" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>