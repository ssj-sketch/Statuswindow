<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- 왼쪽: 가맹점 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 가맹점명 -->
        <TextView
            android:id="@+id/tvMerchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주식회사 이마트 과천점"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- 카테고리 -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="식료품"
            android:textSize="10sp"
            android:textColor="@color/secondary_color"
            android:textStyle="bold"
            android:background="@drawable/category_badge_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:visibility="gone"/>

        <!-- 거래일자 및 상세 정보 -->
        <TextView
            android:id="@+id/tvTransactionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2025.10.20 | 본인105"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <!-- 중간: 금액 및 할부 정보 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:gravity="end">

        <!-- 금액 -->
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42,820원"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- 할부기간 (작게 표시) -->
        <TextView
            android:id="@+id/tvInstallment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="일시불"
            android:textSize="10sp"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:background="@drawable/installment_badge_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"/>

    </LinearLayout>

    <!-- 오른쪽: 삭제 버튼 -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="삭제"
        android:padding="6dp"
        android:scaleType="fitCenter"/>

</LinearLayout>
