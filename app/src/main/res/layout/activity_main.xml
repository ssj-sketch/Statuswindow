<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 콘텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="💰 StatusWindow"
            app:titleTextColor="@android:color/white" />

        <!-- 메인 콘텐츠 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

    <!-- 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnTestSms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="샘플 테스트" />

        <Button
            android:id="@+id/btnInputSms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="직접 입력" />

        <Button
            android:id="@+id/btnShowCreditCardTable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="카드 테이블" />

    </LinearLayout>

    <!-- 대시보드 카드 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 이달 소비금액 -->
            <TextView
                android:id="@+id/tvMonthlySpending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이달 소비금액 0원 (전월 0원)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- 소비 진행률 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                        <ProgressBar
                            android:id="@+id/progressSpending"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/success_color"
                            android:progressBackgroundTint="@color/progress_track_color" />

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 상세보기 버튼 -->
            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상세보기"
                android:textSize="14sp"
                android:backgroundTint="@color/primary_color" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 소득금액 대시보드 카드 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 이달 소득금액 -->
            <TextView
                android:id="@+id/tvMonthlyIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이달 소득금액 0원 (+0원)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- 전월 대비 증가율 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvIncomeChange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전월: 0원"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tvIncomeChangePercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+0%"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark" />

            </LinearLayout>

            <!-- 소득 상세보기 버튼 -->
            <Button
                android:id="@+id/btnViewIncomeDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소득 상세보기"
                android:textSize="14sp"
                android:backgroundTint="@color/success_color" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 요약 정보 (간단한 형태) -->
    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📊 파싱 결과 요약\n\n총 거래: 0건\n카드 거래: 0건\n은행 거래: 0건"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:background="#F5F5F5"
        android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 네비게이션 드로어 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>