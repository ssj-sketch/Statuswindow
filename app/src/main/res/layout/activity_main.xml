<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/contentMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                style="@style/Widget.Material3.Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleCentered="true"
                app:title="@string/title_life_rpg_hud"/>

            <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- RPG HUD 섹션 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- 중앙 레벨/EXP 표시 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:id="@+id/tvLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lv.1"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color"/>

                            <TextView
                                android:id="@+id/tvExp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:text="EXP: 0/100"
                                android:textSize="16sp"
                                android:textColor="@color/secondary_text_color"/>

                        </LinearLayout>

                        <!-- 4개 링 게이지 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- 재력 게이지 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/progressWealth"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:indicatorColor="@color/wealth_color"
                                    app:trackColor="@color/progress_track_color"
                                    app:trackThickness="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/stat_wealth"
                                    android:textSize="12sp"
                                    android:textColor="@color/primary_text_color"/>

                                <TextView
                                    android:id="@+id/tvWealthScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="55"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/wealth_color"/>

                            </LinearLayout>

                            <!-- 체력 게이지 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/progressVital"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:indicatorColor="@color/vital_color"
                                    app:trackColor="@color/progress_track_color"
                                    app:trackThickness="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/stat_vital"
                                    android:textSize="12sp"
                                    android:textColor="@color/primary_text_color"/>

                                <TextView
                                    android:id="@+id/tvVitalScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="60"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/vital_color"/>

                            </LinearLayout>

                            <!-- 사고력 게이지 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/progressCognition"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:indicatorColor="@color/cognition_color"
                                    app:trackColor="@color/progress_track_color"
                                    app:trackThickness="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/stat_cognition"
                                    android:textSize="12sp"
                                    android:textColor="@color/primary_text_color"/>

                                <TextView
                                    android:id="@+id/tvCognitionScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/cognition_color"/>

                            </LinearLayout>

                            <!-- 균형 게이지 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/progressBalance"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:indicatorColor="@color/balance_color"
                                    app:trackColor="@color/progress_track_color"
                                    app:trackThickness="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/stat_balance"
                                    android:textSize="12sp"
                                    android:textColor="@color/primary_text_color"/>

                                <TextView
                                    android:id="@+id/tvBalanceScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="60"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/balance_color"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 은퇴 계획 정보 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🏦 은퇴자산"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_text_color"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnRetirementSettings"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="설정"
                                android:textSize="12sp"
                                app:icon="@android:drawable/ic_menu_preferences"
                                app:iconSize="16dp"/>

                        </LinearLayout>

                        <!-- 은퇴설정 정보 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_background"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="생년월일"
                                    android:textSize="10sp"
                                    android:textColor="@color/secondary_text_color"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/tvBirthDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1989-01"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_text_color"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="가입개월수"
                                    android:textSize="10sp"
                                    android:textColor="@color/secondary_text_color"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/tvPensionMonths"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="420개월"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_text_color"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="희망은퇴나이"
                                    android:textSize="10sp"
                                    android:textColor="@color/secondary_text_color"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/tvRetirementAge"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="60세"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_text_color"
                                    android:gravity="center"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 목표 은퇴 자산 강조 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/wealth_color"
                            android:padding="12dp"
                            android:alpha="0.1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="목표 은퇴자산:"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/wealth_color"/>

                            <TextView
                                android:id="@+id/tvTargetRetirementAsset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10억 2,300만원"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/wealth_color"/>

                        </LinearLayout>

                        <!-- 자산 영향 그래프 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAssetImpact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="이번 달 소비: 0원 → 미래 자산 감소: 0원"
                                android:textSize="12sp"
                                android:textColor="@color/secondary_text_color"/>

                            <ProgressBar
                                android:id="@+id/progressAssetImpact"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_marginTop="8dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="@color/wealth_color"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="은퇴 후 월 생활비:"
                                android:textSize="16sp"
                                android:textColor="@color/primary_text_color"/>

                            <TextView
                                android:id="@+id/tvMonthlyRetirementExpense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0원"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/wealth_color"/>

                        </LinearLayout>

                        <!-- 국민연금 수령액 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="예상 국민연금:"
                                android:textSize="16sp"
                                android:textColor="@color/primary_text_color"/>

                            <TextView
                                android:id="@+id/tvPensionAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0원"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/wealth_color"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 이번달 수입 섹션 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="💰 이번달 수입"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_text_color"/>

                            <TextView
                                android:id="@+id/tvMonthlyIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0원"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/income_color"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvIncomeDetailLink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="상세보기 >"
                            android:textSize="14sp"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="급여, 부업, 투자수익 등"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text_color"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 이번달 카드 사용내역 섹션 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="이번달 카드 사용내역"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_text_color"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnViewDetails"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="상세보기"
                                android:textSize="14sp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMonthlyTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="0원"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/wealth_color"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvMonthlyCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="0건"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text_color"
                            android:gravity="center"/>

                        <!-- 결제 예상액 섹션 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_background"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이번달 결제 예상액"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_text_color"/>

                            <TextView
                                android:id="@+id/tvEstimatedTotal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="0원"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/tvForecastInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="예상 정보"
                                android:textSize="12sp"
                                android:textColor="@color/secondary_text_color"
                                android:gravity="center"/>

                        </LinearLayout>

                        <!-- 엑셀 내보내기 버튼 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnExportExcel"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="엑셀로 내보내기"
                                android:textSize="12sp"
                                android:drawableStart="@android:drawable/ic_menu_save"
                                android:drawablePadding="8dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 설정 섹션 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_settings"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipNotifyStatus"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:checkedIconVisible="false"
                                android:checkable="true"
                                android:text="@string/notify_off" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnOpenNotificationAccess"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="@string/action_open_settings"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvDuplicateSettings"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="중복 거래 인식: 5분"
                                android:textSize="14sp"
                                android:textColor="@color/secondary_text_color"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSettings"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="설정"
                                android:textSize="12sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/action_add"
